{
  "name": "dts-test",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.18.0",
    "hs": "^2.0.1",
    "ts-node": "^1.7.0",
    "typescript": "^2.0.9",
    "webpack": "^1.13.3"
  },
  "scripts": {
    "start": "yarn run build && yarn run bundle",
    "build": "tsc --target es5 --module commonjs --outDir lib/ --sourceMap --declaration src/index.ts",
    "bundle": "webpack --devtool source-map lib/index.js out/bundle.js",
    "test": "ls test/*.ts | xargs -n 1 ts-node && ls test/*.js | xargs -n 1 babel-node",
    "server": "hs"
  }
}
